{% extends 'base.html.twig' %}
{% block body %}
    <h1 class="my-3">Liste des Articles</h1>
    <hr>
    <div class="row mb-2">
    {% for post in posts %}
        <div class="col-md-6">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <h3 class="mb-0">{{ post.title }}</h3>
                    <div class="mb-1 text-body-secondary">{{ post.createdat|date('M-y') }}</div>
                    <p class="card-text mb-auto">{{ post.intro|default("Introduction de l'article si aucune n'a été définie.") }}</p>
                    <a href="/php_blog_adventure/posts/{{ post.id }}" class="icon-link gap-1 icon-link-hover stretched-link">
                        Lire...
                        <svg class="bi">
                            <use xlink:href="#chevron-right"></use>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}