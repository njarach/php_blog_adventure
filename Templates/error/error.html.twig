{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex flex-column align-items-center justify-content-center vh-100">
        <div class="text-center">
            <h1 class="display-1 text-danger mb-3">
                <i class="bi bi-exclamation-triangle-fill"></i> Oops!
            </h1>
            <h2 class="mb-4">Une erreur s'est produite</h2>
            <p class="lead text-muted mb-4">Il semble que quelque chose ne se soit pas passé comme prévu.</p>
            <div class="alert alert-danger" role="alert">
                <strong>Erreur {{ errorCode }} :</strong> {{ message }}
            </div>
            <a href="/php_blog_adventure/" class="btn btn-primary btn-lg mt-3"><i class="bi bi-house-door-fill"></i> Retour à l'accueil</a>
        </div>
    </div>
{% endblock %}